nmap <leader><C-t> :tabnew<cr>

nmap <leader>e :NERDTreeToggle<cr>
nmap <leader>E :NERDTreeFocus<cr>

nmap <leader>p <Plug>yankstack_substitute_older_paste
nmap <leader>P <Plug>yankstack_substitute_newer_paste

nmap <leader>py <Plug>(PrettierAsync)

nmap <C-p> :Telescope fd<cr>
nmap <leader>t :Telescope<cr>
nmap <leader>ff :Telescope current_buffer_fuzzy_find<cr>
nmap <leader>fg :Telescope live_grep<cr>
nmap <leader>fo :Telescope lsp_document_symbols<cr>

" Window navigation
