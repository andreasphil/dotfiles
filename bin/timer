#!/bin/bash

# -----------------------------------------------------------------------------
# TIMER
#
# Shows a notification after the specified amount of seconds.
#
# Usage: timer <seconds> [<message>] [<title>]
# -----------------------------------------------------------------------------

seconds="$1"
message="$2"
title="$3"

if [[ "$message" == "" ]]
then
  message="Timer finished!"
fi

echo -e "${C_BLU}Timer started!${C_RST}"
for ((i = $seconds; i > 0; i--))
do
  echo -e "${C_WHT}- $i${C_RST}"
  sleep 1
done

echo -e "${C_GRN}${message}${C_RST}"
notify "$message" "$title"
